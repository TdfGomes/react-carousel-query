{
    "env": {
        "browser": true,
        "es2021": true,
        "jest":  true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:prettier/recommended",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest",
        "react-hooks"
    ],
    "ignorePatterns": ["./index.d.ts"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
}
