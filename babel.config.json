{
    "presets": [
        ["@babel/preset-env",
        {
          "targets": {
            "chrome": "58"
          }
        }],
        "@babel/preset-react"
    ],
    "plugins": [
      ["module-resolver", {
        "root": ["./src"],
        "alias": {
          "@components": "./src/components",
          "@primitives": "./src/primitives",
          "@hooks": "./src/hooks",
          "@icons": "./src/icons",
          "@utils": "./src/utils"
        }
      }]
    ]
  }